# =============================================================================
# Admin Service Local Development Configuration
# =============================================================================
# This file is used for VS Code debugging when infrastructure runs in Docker
# Copied to .env automatically by scripts/deploy.sh local

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=3010
SERVICE_NAME=admin-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# Connects to Docker infrastructure - uses same MongoDB as user service
MONGODB_URI=mongodb://admin:admin123@localhost:27018/user_service_local_db?authSource=admin

# =============================================================================
# Service Discovery
# =============================================================================
# Infrastructure services - connects to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:8000
INVENTORY_SERVICE_URL=http://localhost:5000
ORDER_SERVICE_URL=http://localhost:5001
PAYMENT_SERVICE_URL=http://localhost:5002
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Message Broker Service Configuration
MESSAGE_BROKER_SERVICE_URL=http://localhost:4000
MESSAGE_BROKER_API_KEY=dev-api-key-12345

# =============================================================================
# Cache Configuration
# =============================================================================
# Connects to Docker infrastructure - uses Redis database 1
REDIS_URL=redis://:redis_dev_pass_123@localhost:6379/1

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-for-development-only
JWT_EXPIRE=24h
SESSION_SECRET=your-super-secure-session-secret-for-development-only
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3010

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/admin-service-local.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id
