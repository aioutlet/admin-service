# =============================================================================
# Admin Service Development Environment Configuration
# =============================================================================
# This file is used for VS Code debugging when connecting to development infrastructure
# Copied to .env automatically by scripts/deploy.sh development

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=3010
SERVICE_NAME=admin-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# Connects to development infrastructure - uses same MongoDB as user service
MONGODB_URI=mongodb://admin:admin_dev_secure_789@localhost:27019/user_service_dev_db?authSource=admin

# =============================================================================
# Service Discovery
# =============================================================================
# Infrastructure services - connects to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:8000
INVENTORY_SERVICE_URL=http://localhost:5000
ORDER_SERVICE_URL=http://localhost:5001
PAYMENT_SERVICE_URL=http://localhost:5002
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Connects to development Docker infrastructure
RABBITMQ_URL=amqp://admin:rabbitmq_dev_secure_654@localhost:5673

# =============================================================================
# Cache Configuration
# =============================================================================
# Connects to development Docker infrastructure - uses Redis database 1
REDIS_URL=redis://:redis_dev_secure_pass_321@localhost:6380/1

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=dev-7a9f2d84b3c6e1f8a5d7c2b9e6f4a1d8c5b2e9f6a3d0c7b4e1f8a5d2c9b6e3f0a7
JWT_EXPIRE=24h
SESSION_SECRET=dev-super-secure-session-secret-for-development-environment
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3010

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/admin-service-development.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id
