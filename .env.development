# Admin Service Development Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3010
HOST=localhost
API_VERSION=1.0.0
SERVICE_NAME=admin-service

# Authentication Configuration (Development)
JWT_SECRET=dev-jwt-secret-key-for-admin-service-development-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=8h
JWT_ISSUER=aioutlet-auth-service
JWT_AUDIENCE=aioutlet-admin-service

# Admin Security (Development)
ADMIN_SESSION_TIMEOUT=28800000
ADMIN_MAX_LOGIN_ATTEMPTS=10
ADMIN_LOCKOUT_DURATION=300000
ADMIN_PASSWORD_MIN_LENGTH=8

# External Services Configuration (Development)
USER_SERVICE_URL=http://localhost:3002/api/admin/users
USER_SERVICE_SECRET=dev-shared-secret-for-user-service-admin-access
AUTH_SERVICE_URL=http://localhost:3001/api/admin/auth
PRODUCT_SERVICE_URL=http://localhost:3003/api/admin/products
INVENTORY_SERVICE_URL=http://localhost:3004/api/admin/inventory
ORDER_SERVICE_URL=http://localhost:5000/api/admin/orders
PAYMENT_SERVICE_URL=http://localhost:7000/api/admin/payments
NOTIFICATION_SERVICE_URL=http://localhost:3008/api/admin/notifications
AUDIT_SERVICE_URL=http://localhost:9000/api/admin/audits

# Rate Limiting Configuration (Development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=2000
ADMIN_RATE_LIMIT_MAX_REQUESTS=5000

# CORS Configuration (Development)
CORS_ORIGIN=http://localhost:3000,https://localhost:3001,http://localhost:4000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# Logging Configuration (Development)
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=logs/admin-service-dev.log
ENABLE_REQUEST_LOGGING=true

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL=30000
ENABLE_REAL_TIME_UPDATES=true
MAX_DASHBOARD_WIDGETS=20

# Security Headers (Development)
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=false
CONTENT_SECURITY_POLICY=false

# Monitoring Configuration (Development)
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60000
ENABLE_METRICS=true
METRICS_PORT=3011

# Development Features
ENABLE_SWAGGER=true
ENABLE_DEBUG_PANEL=true
ENABLE_HOT_RELOAD=true
ENABLE_DEV_TOOLS=true

# Service Discovery (Development)
SERVICE_REGISTRY_URL=http://localhost:8761/eureka
SERVICE_HEARTBEAT_INTERVAL=30000
