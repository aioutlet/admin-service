# =============================================================================
# Admin Service Environment Configuration Template
# =============================================================================
# This file serves as a template for creating environment-specific .env files
# Copy this file and rename it to .env, then fill in the appropriate values

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=local
PORT=3010
SERVICE_NAME=admin-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Service Discovery
# =============================================================================
# URLs for connecting to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:8000
INVENTORY_SERVICE_URL=http://localhost:5000
ORDER_SERVICE_URL=http://localhost:5001
PAYMENT_SERVICE_URL=http://localhost:5002
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Message Broker Configuration
# =============================================================================
# RabbitMQ connection string
# Message Broker Configuration
MESSAGE_BROKER_SERVICE_URL=http://localhost:4000
MESSAGE_BROKER_API_KEY=your-api-key

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection string - admin service uses database 1
REDIS_URL=redis://:password@localhost:6379/1

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=8tDBDMcpxroHoHjXjk8xp/uAn8rzD4y8ZZremFkC4gI=
JWT_EXPIRE=24h
SESSION_SECRET=your-session-secret-key
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3010

# =============================================================================
# Environment Settings
# =============================================================================
DEBUG=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/admin-service.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# OpenTelemetry tracing configuration
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Request correlation tracking
CORRELATION_ID_HEADER=x-correlation-id