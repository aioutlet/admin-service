{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Admin Service",
      "program": "${workspaceFolder}/src/api/server.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3010",
        "SERVICE_NAME": "admin-service",
        "SERVICE_VERSION": "1.0.0",
        "USER_SERVICE_URL": "http://localhost:3002",
        "AUTH_SERVICE_URL": "http://localhost:3001",
        "JWT_SECRET": "your-jwt-secret-key-at-least-256-bits-long",
        "LOG_LEVEL": "debug",
        "LOG_TO_CONSOLE": "true"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": ["--inspect"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Admin Service (Nodemon)",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/src/api/server.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3010",
        "SERVICE_NAME": "admin-service",
        "SERVICE_VERSION": "1.0.0",
        "USER_SERVICE_URL": "http://localhost:3002",
        "AUTH_SERVICE_URL": "http://localhost:3001",
        "JWT_SECRET": "your-jwt-secret-key-at-least-256-bits-long",
        "LOG_LEVEL": "debug",
        "LOG_TO_CONSOLE": "true"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": ["--inspect"]
    }
  ]
}
